    <script>
        const ctx = document.getElementById('competitionChart').getContext('2d');
        let currentChart;

        // κ°€μƒ λ°μ΄ν„° (Jupyter Notebook κΈ°λ°)
        const data = {
            nursing: {
                labels: ['Aλ€ν•™κµ', 'Bλ€ν•™κµ', 'Cλ€ν•™κµ', 'Dλ€ν•™κµ', 'Eλ€ν•™κµ', 'Fλ€ν•™κµ'],
                values: [18.2, 24.5, 15.8, 21.0, 12.4, 19.5],
                color: 'rgba(16, 185, 129, 0.7)',
                borderColor: 'rgb(16, 185, 129)',
                title: 'π“ κ°„νΈν•™κ³Ό κ²½μλ¥  ν„ν™©'
            },
            business: {
                labels: ['Aλ€ν•™κµ', 'Bλ€ν•™κµ', 'Cλ€ν•™κµ', 'Dλ€ν•™κµ', 'Eλ€ν•™κµ', 'Fλ€ν•™κµ'],
                values: [12.5, 11.2, 22.8, 14.3, 9.8, 15.6],
                color: 'rgba(59, 130, 246, 0.7)',
                borderColor: 'rgb(59, 130, 246)',
                title: 'π“ κ²½μν•™κ³Ό κ²½μλ¥  ν„ν™©'
            }
        };

        function initChart(type) {
            const chartData = data[type];
            currentChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: chartData.labels,
                    datasets: [{
                        label: 'κ²½μλ¥  (n:1)',
                        data: chartData.values,
                        backgroundColor: chartData.color,
                        borderColor: chartData.borderColor,
                        borderWidth: 2,
                        borderRadius: 8,
                        hoverBackgroundColor: chartData.borderColor
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { display: false }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: { color: '#e2e8f0' },
                            ticks: { font: { family: 'Noto Sans KR' } }
                        },
                        x: {
                            grid: { display: false },
                            ticks: { font: { family: 'Noto Sans KR', weight: 'bold' } }
                        }
                    }
                }
            });
        }

        function updateChart(type) {
            const chartData = data[type];
            
            // UI μ—…λ°μ΄νΈ
            document.getElementById('chartTitle').innerText = chartData.title;
            const btnN = document.getElementById('btnNursing');
            const btnB = document.getElementById('btnBusiness');

            if(type === 'nursing') {
                btnN.className = 'px-4 py-2 rounded-md bg-white shadow-sm text-emerald-600 font-bold transition-all';
                btnB.className = 'px-4 py-2 rounded-md text-slate-500 hover:text-slate-700 transition-all';
            } else {
                btnB.className = 'px-4 py-2 rounded-md bg-white shadow-sm text-blue-600 font-bold transition-all';
                btnN.className = 'px-4 py-2 rounded-md text-slate-500 hover:text-slate-700 transition-all';
            }

            // μ°¨νΈ λ°μ΄ν„° μ—…λ°μ΄νΈ
            currentChart.data.labels = chartData.labels;
            currentChart.data.datasets[0].data = chartData.values;
            currentChart.data.datasets[0].backgroundColor = chartData.color;
            currentChart.data.datasets[0].borderColor = chartData.borderColor;
            currentChart.update();
        }

        // μ΄κΈ° μ‹¤ν–‰
        window.onload = () => initChart('nursing');
    </script>
